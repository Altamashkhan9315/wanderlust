<% layout("/layouts/boilerplate") -%>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <br><br>
    <h2>Edit your post</h2>
    <form method="post" action="/listings/<%=listing.id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="list[title]" value="<%=listing.title%>" class="form-control" required>
            <div class="valid-feedback">
                Looks good!
              </div>
              <div class="invalid-feedback">
                Please enter valid title
              </div>
        </div>
        
        <div class="mb-3">
            <label for="description" class="form-label">description</label>
            <textarea name="list[description]" class="form-control" required><%=listing.description%>  ></textarea>
            <div class="valid-feedback">
                Looks good!
              </div>
              <div class="invalid-feedback">
                Please enter valid description
              </div>
        </div>
        <div class="mb-3">
          <img src="<%= url %>" alt="listing"/>
      </div>
        <div class="mb-3">
            <label for="image" class="form-label">image</label>
            <input name="list[image]" type="file" class="form-control">
            <div class="valid-feedback">
                Looks good!
              </div>
              <div class="invalid-feedback">
                Please enter valid url
              </div>
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">price</label>
                <input name="list[price]" value="<%=listing.price%>" type="number" class="form-control" required>
                <div class="valid-feedback">
                    Looks good!
                  </div>
                  <div class="invalid-feedback">
                    Please enter valid price
                  </div>
            </div>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">country</label>
                <input name="list[country]" value="<%=listing.country%>" class="form-control" required>
                <div class="valid-feedback">
                    Looks good!
                  </div>
                  <div class="invalid-feedback">
                    Please enter valid country
                  </div>
            </div>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">location</label>
            <input name="list[location]" value="<%=listing.location%>"  class="form-control" required>
            <div class="valid-feedback">
                Looks good!
              </div>
              <div class="invalid-feedback">
                Please enter valid location
              </div>
        </div>
        <button class="btn btn-dark add-btn">Edit</button>
    </form>
</div>
</div>
</body>
