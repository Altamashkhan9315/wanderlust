<% layout("/layouts/boilerplate") -%>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <br><br>
            <h2>Create New Listing</h2>
            <br>
    <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="list[title]" placeholder="Enter title" class="form-control" required>
            <div class="valid-feedback">
                Looks good!
              </div>
              <div class="invalid-feedback">
                Please enter valid title
              </div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">description</label>
            <textarea name="list[description]" class="form-control" required></textarea>
            <div class="valid-feedback">
                Looks good!
              </div>
              <div class="invalid-feedback">
                Please enter valid description
              </div>
        </div>
       
        <div class="mb-3">
          <label for="image" class="form-label">Upload image</label>
          <input name="list[image]" type="file" class="form-control">
      </div>
        <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label">price</label>
            <input name="list[price]" placeholder="Enter price" type="number"  class="form-control" required>
            <div class="valid-feedback">
                Looks good!
              </div>
              <div class="invalid-feedback">
                Please enter valid price
              </div>
        </div>
        <div class="mb-3 col-md-8">
            <label for="country" class="form-label">country</label>
            <input name="list[country]" placeholder="Enter country" class="form-control" required>
            <div class="valid-feedback">
                Looks good!
              </div>
              <div class="invalid-feedback">
                Please enter valid country
              </div>
        </div>

    </div>
        <div class="mb-3">
            <label for="location" class="form-label">location</label>
            <input name="list[location]" placeholder="Enter location"  class="form-control" required>
            <div class="valid-feedback">
                Looks good!
              </div>
              <div class="invalid-feedback">
                Please enter valid location
              </div>
        </div>
       

        
        <button class="btn btn-dark add-btn">Submit</button>
        <br>
        <br>
    </form>
</div>
</div>
</body>
